<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#D6E4FF"/> <!-- Light blue when pressed -->
            <corners android:radius="16dp"/>
            <stroke android:width="2dp" android:color="#6672FE"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <solid android:color="#EFF3FF"/> <!-- Lighter blue when focused -->
            <corners android:radius="16dp"/>
            <stroke android:width="2dp" android:color="#6672FE"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#FFFFFF"/> <!-- White when default -->
            <corners android:radius="16dp"/>
            <stroke android:width="2dp" android:color="#6672FE"/>
        </shape>
    </item>
</selector>
